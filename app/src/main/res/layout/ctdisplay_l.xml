<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/BACK_LAYOUT"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <com.example.pgyl.pekislib_a.DotMatrixDisplayView
            android:id="@+id/DOT_MATRIX_DISPLAY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <com.example.pgyl.pekislib_a.SymbolButtonView
            android:id="@+id/BTN_CHRONO_MODE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1" />

        <com.example.pgyl.pekislib_a.SymbolButtonView
            android:id="@+id/BTN_TIMER_MODE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1" />

        <com.example.pgyl.pekislib_a.SymbolButtonView
            android:id="@+id/BTN_INVERT_CLOCK_APP_ALARM"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1" />

        <com.example.pgyl.pekislib_a.SymbolButtonView
            android:id="@+id/BTN_RUN"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1" />

        <com.example.pgyl.pekislib_a.SymbolButtonView
            android:id="@+id/BTN_SPLIT"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1" />

        <com.example.pgyl.pekislib_a.SymbolButtonView
            android:id="@+id/BTN_RESET"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>    
